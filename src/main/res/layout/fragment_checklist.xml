<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanmayjha.test.ChecklistFragment"
    android:rowCount="9"
    android:columnCount="3"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you got the following items ?"
        android:textColor="#e2e2e2"
        android:textSize="25sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:fontFamily="serif"
        />

    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mattress and Pillow"
        android:layout_row="1"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/mattress_id"/>
    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bucket and Mug"
        android:layout_row="2"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/bucket_id"/>

    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simcard"
        android:layout_row="3"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/simcard_id"/>
    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books"
        android:layout_row="4"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/books_id"/>
    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:layout_row="5"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/lock_id"/>
    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laundary Bag"
        android:layout_row="6"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/laundary_bag_id"/>
    <CheckBox
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rope"
        android:layout_row="7"
        android:layout_column="0"
        android:fontFamily="serif"
        android:textColor="#c1c1c1"/>
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/detail"
        android:id="@+id/rope_id"/>

</GridLayout>
